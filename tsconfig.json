{
  "compilerOptions": {
    "target": "es2021",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@spequoia/core": ["packages/spequoia-core/dist"],
      "@spequoia/model": ["packages/spequoia-model/dist"]
    }
  },
  "include": ["packages"]
}
