{
  "name": "spequoia",
  "version": "1.0.0",
  "description": "Spequoia is a spec-as-code toolkit that transforms readable specifications into documentation, wireframe previews, automated tests, and interactive demos.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "build": "npm run build --workspaces",
    "clean": "npm run clean --workspaces",
    "lint": "eslint packages/**/*.ts",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit --skipLibCheck",
    "test": "vitest run --coverage",
    "dev": "vitest watch"
  },
  "author": "pckerneis",
  "license": "MIT",
  "workspaces": [
    "packages/spequoia-model",
    "packages/spequoia-core"
  ],
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.25.1",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "@vitest/coverage-v8": "^3.1.2",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^10.1.2",
    "globals": "^16.0.0",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "tsup": "^8.4.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.2",
    "yaml-lint": "^1.7.0"
  }
}
